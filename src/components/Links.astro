---
import { userLinks } from "@/data/userData";
---
<ul class="space-y-6">
    {userLinks.map((link) => (
        <center>
            <li class="mx-2">
                <a href={link.url} class="text-gray-500 hover:text-gray-700" target="_blank" rel="noopener noreferrer">
                    <dt class="flex items-center space-x-2 p-1 -m-1 rounded-xl hover:bg-slate-300 bg-slate-200">
                        <div class="flex-shrink-0 flex h-10 w-10 items-center justify-center rounded-lg text-slate-500"><img src={link.icon} alt={link.title} class="w-6 h-6" /></div>
                        <div class="w-full flex-grow min-w-0"><p class="font-medium text-sm leading-6 text-gray-900">{link.title}</p></div>
                    </dt>
                </a>
            </li>
        </center>
    ))}
</ul>